generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("CLOUD_DB_URI")
}

model User {
  id              String    @id @default(cuid())
  name            String?
  dob             DateTime?
  email           String    @unique
  password        String?
  googleId        String?   @unique
  isEmailVerified Boolean   @default(false)
  otpCode         String?
  otpExpiry       DateTime?
  refreshToken    String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("users2")
}
